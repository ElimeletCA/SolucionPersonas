                        <tr>
                            <th scope="col" class="px-4 py-4">NÚMERO DE DOCUMENTO</th>
                            <th scope="col" class="px-4 py-3">PRIMER NOMBRE</th>
                            <th scope="col" class="px-4 py-3">SEGUNDO NOMBRE</th>
                            <th scope="col" class="px-4 py-3">PRIMER APELLIDO</th>
                            <th scope="col" class="px-4 py-3">SEGUNDO APELLIDO</th>
                            <th scope="col" class="px-4 py-3">FECHA NACIMIENTO</th>
                            <th scope="col" class="px-4 py-3">ROLES</th>
                            <th scope="col" class="px-4 py-3">CORREO ELECTRÓNICO</th>
                            <th scope="col" class="px-4 py-3">TELÉFONO</th>
                            <th scope="col" class="px-4 py-3">TIPO PAGO</th>
                            <th scope="col" class="px-4 py-3">NÚMERO CUENTA</th>
