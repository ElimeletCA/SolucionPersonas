@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/registro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MantenimientoPersonas.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-5.2.3-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/select2/select2.css" rel="stylesheet" />
    <link href="~/lib/select2/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/datatables.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/jquery-confirm/css/jquery-confirm.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>

    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6 offset-xl-1">
                    <form id="formregistro">
                        <div class="divider d-flex align-items-center my-4">
                            <h1 class="text-center fw-bold mx-3 mb-0">Registro</h1>
                        </div>

                        <!-- Nombre Usuario input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label required-field" for="txtnombreusuario">Usuario</label>
                            <input type="text" id="txtnombreusuario" name="txtnombreusuario" class="form-control form-control-lg required-field"
                                   placeholder="Ingrese un nombre de usuario" required />
                        </div>
                        <!-- Password input -->
                        <div data-mdb-input-init class="form-outline mb-3">
                            <label class="form-label required-field" for="txtpassword">Contraseña</label>
                            <div id="passwordgroup" class="input-group mb-3">
                                <input type="password" id="txtpassword" name="txtpassword" maxlength="25" class="form-control form-control-lg pass"
                                       placeholder="Ingrese una contraseña" required />
                                <span class="input-group-text text-center">
                                    <button id="btnpassword" type="button" class="btn btn-sm fa-solid fa-lg fa-eye"></button>
                                </span>

                            </div>

                        </div>
                        <!-- Password validation labels -->

                        <div id="password-message">
                            <h3>La contraseña debe contener:</h3>
                            <p class="password-message-item invalid">
                                Al menos
                                <b>una letra minúscula</b>
                            </p>
                            <p class="password-message-item invalid">
                                Al menos
                                <b>una letra mayúscula</b>
                            </p>
                            <p class="password-message-item invalid">
                                Al menos
                                <b>un número</b>
                            </p>
                            <p class="password-message-item invalid">
                                Al menos
                                <b>un caracter especial</b>
                            </p>
                            <p class="password-message-item invalid">
                                Mínimo
                                <b>8 caracteres</b>
                            </p>
                        </div>
                        <!-- Nombre completo input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label required-field" for="txtnombrecompleto">Nombre completo</label>
                            <input type="text" id="txtnombrecompleto" name="txtnombrecompleto" class="form-control form-control-lg"
                                   placeholder="Ingrese el nombre completo" required />
                        </div>
                        <!-- Fecha nacimiento input -->

                        <div class="form-outline mb-4">
                            <label for="dpfechanacimiento" class="form-label required-field">Fecha de nacimiento</label>
                            <input id="dpfechanacimiento" name="dpfechanacimiento" class="form-control form-control-lg" type="date" required/>
                        </div>
                        <!-- Numero telefono input -->

                        <div class="form-outline mb-4">
                            <label for="txttelefono" class="form-label required-field">Número de teléfono</label>
                            <input id="txttelefono" type="tel" class="form-control form-control-lg" name="txttelefono" required>
                        </div>

                        <!-- Correo electronico input -->
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label required-field" for="txtemail">Correo electrónico</label>
                            <input type="text" id="txtemail" maxlength="50" name="txtemail" class="form-control form-control-lg" placeholder="Ingrese un correo electrónico" required />

                        </div>
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">
                                Registrar cuenta
                            </button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">
                                Ya tienes una cuenta? <a href="/Auth/Login" class="link-danger">Iniciar sesión</a>
                            </p>
                            <br />
                        </div>

                    </form>

                </div>
                <footer class="fixed bottom-0 left-0 z-20 w-full p-4 bg-white border-t border-gray-200 shadow md:flex md:items-center md:justify-between md:p-6 dark:bg-gray-800 dark:border-gray-600">
                    <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">
                        © 2024 - Mantenimiento de Personas - Elimelet Caraballo
                    </span>
                </footer>
            </div>
        </div>


    </section>


    <!--Scripts-->
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-5.2.3-dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js" asp-append-version="true"></script>
    <script src="~/lib/input-mask/jquery.inputmask.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-confirm/js/jquery-confirm.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/2d70f210f1.js" crossorigin="anonymous"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/js/registro.js" asp-append-version="true"></script>

</body>
</html>
